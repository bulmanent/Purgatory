<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/metronomeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/metronome_title"
            android:textColor="@color/lavender_900"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bpmInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/metronome_bpm"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/beatsPerBarInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/metronome_beats_per_bar"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/metronomeStartButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="@string/metronome_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/metronomeStopButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/metronome_stop" />
        </LinearLayout>

        <TextView
            android:id="@+id/metronomeStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/metronome_status_stopped"
            android:textColor="@color/lavender_900" />

        <TextView
            android:id="@+id/metronomeVolumeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/metronome_volume"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/metronomeVolumeValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="100%" />

        <com.google.android.material.slider.Slider
            android:id="@+id/metronomeVolumeSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:stepSize="1"
            android:value="100"
            android:valueFrom="0"
            android:valueTo="100" />

        <com.google.android.material.slider.Slider
            android:id="@+id/bpmSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:stepSize="1"
            android:value="90"
            android:valueFrom="30"
            android:valueTo="200" />

        <com.google.android.material.slider.Slider
            android:id="@+id/beatsPerBarSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:stepSize="1"
            android:value="4"
            android:valueFrom="1"
            android:valueTo="12" />

    </LinearLayout>
</ScrollView>
