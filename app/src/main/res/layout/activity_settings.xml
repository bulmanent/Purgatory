<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_green_50"
    android:orientation="vertical"
    android:padding="24dp">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/settingsToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lavender_500"
        android:title="@string/settings"
        android:titleTextColor="@android:color/white" />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/keepScreenAwakeSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/keep_screen_awake" />

    <TextView
        android:id="@+id/keepScreenAwakeHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/keep_screen_awake_hint"
        android:textColor="@color/lavender_900" />

</LinearLayout>
